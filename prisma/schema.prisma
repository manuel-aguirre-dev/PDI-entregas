generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model productos {
  nombre String @id
  precio Float
  cantidad Int
}
model ventas {
  id Int @id @default(autoincrement())
  producto String
  cantidad Int
  total Float
}
model usuarios {
  id Int @id @default(autoincrement())
  nombre String
  email String @unique
  password String
}
model admin {
  id Int @id @default(autoincrement())
  nombre String
  email String @unique
  password String
}
